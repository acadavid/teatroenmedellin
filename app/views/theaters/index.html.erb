<h1>Theaters</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @theaters.each do |theater| %>
      <tr>
        <td><%= theater.id %></td>
        <td><%= link_to theater.name, theater_path(theater) %></td>
        <td><%= theater.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_theater_path(theater), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', theater_path(theater), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_theater_path, :class => 'btn btn-primary' %>
