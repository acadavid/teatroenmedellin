<%= simple_form_for [@theater, @act], :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Act</legend>

    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :clasification %>
    <%= f.input :price %>
    <%= f.input :date, :as => :datetime, :input_html => { :class => "span1" } %>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to :cancel, theater_acts_path(@theater), :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
